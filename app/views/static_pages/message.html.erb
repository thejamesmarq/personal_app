<% provide(:title, 'Message James') %>
<h1>Send me a message!</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@message) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :msg, "Message" %>
      <%= f.text_field :msg%>

      <%= f.submit "Send", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>